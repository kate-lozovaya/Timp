#include <iostream>
#include <string>
#include <fstream>
using namespace std;

int main()
{
	int i = 0, k = 0;
	string s1, s2, filename1, filename2;
	ifstream fin1, fin2;
	do
	{
		cout << "Enter the name of the first file" << endl;
		cin >> filename1;
		cout << "Enter the name of the second file" << endl;
		cin >> filename2;
		cout << endl;
		fin1.open(filename1);
		fin2.open(filename2);
		if (!fin1.is_open())
			cout << filename1 << " isn't find" << endl;
		if (!fin2.is_open())
			cout << filename2 << " isn't find" << endl;
	} while ((!fin1.is_open()) || (!fin2.is_open()));

	while (!fin1.eof())
	{
		i++;
		getline(fin1, s1);
		while (!fin2.eof())
		{
			getline(fin2, s2);
			if (s1 == s2)
				k = 1;
		}
		if (fin2.eof())
			fin2.seekg(0);
		if (k == 0)
			cout << filename1 << "  " << i << " " << s1 << endl;
		k = 0;
	}

	i = 0;

	while (!fin2.eof())
	{
		i++;
		getline(fin2, s2);
		while (!fin1.eof())
		{
			getline(fin1, s1);
			if (s1 == s2)
				k = 1;
		}
		if (fin1.eof())
			fin1.seekg(0);
		if (k == 0)
			cout << filename2 << "  " << i << " " << s2 << endl;
		k = 0;
	}
	fin1.close();
	fin2.close();
	system("pause");
	return 0;
}
