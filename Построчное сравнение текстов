#include <iostream>
#include <string>
#include <fstream>
using namespace std;

int main(int argc; char* argv[])
{
	int i = 0, k = 0;
	for(int j = 0; j < argc; ++j)
		cout << argv[j];
	string s1, s2, filename1, filename2;
	ifstream fin1, fin2;
	filename1 = argv[1];
	filename2 = argv[2];
	fin1.open(filename1);
	fin2.open(filename2);
	if (!fin1.is_open()||!fin2.is_open())
	{
		cout << "Error. Files isn't find"
		return 1;
	}

	while (!fin1.eof())
	{
		i++;
		getline(fin1, s1);
		while (!fin2.eof())
		{
			getline(fin2, s2);
			if (s1 == s2)
				k = 1;
		}
		if (fin2.eof())
			fin2.seekg(0);
		if (k == 0)
			cout << filename1 << "  " << i << " " << s1 << endl;
		k = 0;
	}

	i = 0;

	while (!fin2.eof())
	{
		i++;
		getline(fin2, s2);
		while (!fin1.eof())
		{
			getline(fin1, s1);
			if (s1 == s2)
				k = 1;
		}
		if (fin1.eof())
			fin1.seekg(0);
		if (k == 0)
			cout << filename2 << "  " << i << " " << s2 << endl;
		k = 0;
	}
	fin1.close();
	fin2.close();
	system("pause");
	return 0;
}
